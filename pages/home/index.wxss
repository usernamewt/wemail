/* pages/home/index.wxss */

.page-body {
  width: 100%;
}

.container {
  margin-top: -250rpx;
}
.page-body {
  background-color: aliceblue;
}
.head-custom {
  width: 100vw;
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
}
.head-text {
  color: #fff;
  margin-bottom: 60rpx;
  font-weight: bolder;
  font-size: 0.8rem;
}

.head-img {
  color: #fff;
}

.login-box{
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: calc(100vw - 120rpx);
  padding: 40rpx;
  border-radius: 20rpx;
  box-shadow: 0 0 20px rgba(201,170,107,0.3);
  height: 140rpx;
  color: #f1e6c2;
  margin-bottom: 40rpx;
  background: linear-gradient(
    135deg,
    #2d1b07 25%,
    #5c4b1a 50%,
    #c9aa6b 75%,
    #f1e6c2 100%
  );
  background-size: 200% 200%;
  animation: gradientShift 8s ease infinite;
}

